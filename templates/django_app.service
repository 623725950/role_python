[Unit]
Description=My django app
Requires=network.target 
After=network.target

[Service]
KillSignal=SIGQUIT
WorkingDirectory={{python_venv_path}}/django
Environment="DJANGO_PATH={{python_venv_path}}/django/bin"
ExecStart=$DJANGO_PATH/uwsgi --ini {{python_venv_path}}/django/django.ini
Restart=always
Type=notify
NotifyAccess=all
StandardError=syslog

[Install]
WantedBy=multi-user.target